# Render.com Configuration
# https://render.com/docs/blueprint-spec

services:
  - type: web
    name: advocacia-saas
    runtime: python
    plan: starter  # $7/mês - pode usar "free" mas hiberna após 15min
    buildCommand: "./build.sh"
    startCommand: "gunicorn run:app --bind 0.0.0.0:$PORT --workers 2 --threads 4 --timeout 120"
    healthCheckPath: /
    envVars:
      - key: PYTHON_VERSION
        value: "3.11.0"
      - key: SECRET_KEY
        generateValue: true
      - key: FLASK_ENV
        value: production
      - key: DATABASE_URL
        sync: false  # Configurar manualmente com URL do Supabase
      - key: STRIPE_SECRET_KEY
        sync: false
      - key: STRIPE_PUBLIC_KEY
        sync: false
      - key: ADMIN_EMAIL
        value: admin@advocaciasaas.com
      - key: ADMIN_PASSWORD
        sync: false  # Definir manualmente
