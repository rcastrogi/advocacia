{
  "name": "advocacia-saas-tests",
  "version": "1.0.0",
  "description": "Test suite for Advocacia SaaS application",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:frontend": "jest tests/frontend",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint tests/frontend tests/integration tests/e2e --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint tests/frontend tests/integration tests/e2e --ext .js,.jsx,.ts,.tsx --fix"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.56.0",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/frontend/setup.js"],
    "testMatch": [
      "<rootDir>/tests/frontend/**/*.test.js",
      "<rootDir>/tests/integration/**/*.test.js",
      "<rootDir>/tests/e2e/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "app/static/js/**/*.js",
      "app/templates/**/*.html",
      "!app/static/js/vendor/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "tests/coverage/frontend",
    "coverageReporters": ["text", "lcov", "html"]
  }
}