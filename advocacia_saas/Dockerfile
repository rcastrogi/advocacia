FROM python:3.11-slim

WORKDIR /app

# Instalar depend√™ncias do sistema (incluindo cairo para pycairo)
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    libcairo2-dev \
    pkg-config \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements e instalar
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar c√≥digo
COPY . .

# Criar script de inicializa√ß√£o
RUN echo '#!/bin/bash\n\
echo "üöÄ Iniciando Petitio..."\n\
python init_db.py\n\
echo "‚úÖ Banco inicializado"\n\
exec "$@"' > /app/start.sh && chmod +x /app/start.sh

# Expor porta
EXPOSE 8080

# Vari√°veis de ambiente
ENV FLASK_ENV=production
ENV PORT=8080

# Comando de inicializa√ß√£o
CMD ["/app/start.sh", "gunicorn", "run:app", "--bind", "0.0.0.0:8080", "--workers", "2", "--threads", "4", "--timeout", "120"]
